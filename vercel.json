{
  "version": 2,
  "builds": [
    {
      "src": "server/server.vercel.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/**/*.js",
          "server/**/*.json",
          "server/config/**/*",
          "server/middleware/**/*"
        ],
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.vercel.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,PATCH,OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept, Authorization, x-auth-token"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "client/build/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/service-worker.js",
      "dest": "client/build/service-worker.js",
      "headers": {
        "Service-Worker-Allowed": "/",
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/manifest.json",
      "dest": "client/build/manifest.json",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {"source" : "/(.*)", "destination": "/"}
  ]
}