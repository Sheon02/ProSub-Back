{
  "name": "premium-subscription-store",
  "version": "1.0.0",
  "description": "E-commerce platform for premium account subscriptions",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "vercel-build": "npm install",
    "start": "NODE_ENV=production node server/server.js",
    "server": "NODE_ENV=development nodemon server/server.js",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install && npm run build --prefix client",
    "data:import": "node server/seeder.js",
    "data:destroy": "node server/seeder.js -d",
    "test": "NODE_ENV=test jest --watchAll",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write ."
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "@vercel/node": "^3.0.0",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "razorpay": "^2.9.6",
    "uuid": "^11.1.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}